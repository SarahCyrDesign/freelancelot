<h2><%= @project.title %><h2>
<h4>Ticket Number #<%= @project.ticket %><h4>
<h4><%= @project.client_name %><h4>

<% @project.categories.each do |category| %>
  <strong><%= category.name %> | </strong>
<% end %>

<p><%= @project.description %><p>
<p>$<%= @project.budget %><p>
<p>Start Date: <%= @project.start_date %><p>
<p>Deadline: <%= @project.deadline %><p>
<p>Hours Currently Logged: <%= @project.time_log %> hours<p>
<p>Project Status <%= @project.status %><p>
<p>Invoice Sent? <%= @project.invoice_sent %><p>


<div>
  <% if @user.admin? || @user.freelancer? %>
    <%= link_to "Edit Project", edit_project_path %>
  <% end %>
</div>
