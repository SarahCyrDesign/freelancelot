<!--Load projects function-->
<a href="#" class="js-next" data-id="<%=@category.id%>">Next Category</a>

<h1 class="categoryName"><%= @category.name %></h1>

<!-- Render the text here and load projects in JSON categories.js -->
<div id="projects_list">
  <% @category.projects.each do |project| %>
  <p><%= link_to project.title, project_path(project) %> | Client: <%= project.client_name %> | Ticket #: <%= project.ticket %> | Deadline: <%= project.deadline %></p>
  <% end %>
</div>

<% if policy(@category).update? %>
  <p><%= button_to "Edit", edit_category_path, method: "get"%></p>
  <p><%= button_to "Delete", category_path, method: "delete"%></p>
<% else %>
  <p><%= link_to "Back", categories_path%></p>
<% end %>
